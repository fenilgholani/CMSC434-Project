<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CalendarActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/workout_title"
        android:textColor="@color/black"
        android:textSize="34dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/months"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:background="@color/white"
        android:outlineSpotShadowColor="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/month_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="April"
            android:textColor="@color/main_red"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/next_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:rotationY="180"
            android:src="@drawable/arrow_back" />


    </RelativeLayout>

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_below="@id/months"
        app:compactCalendarBackgroundColor="@color/main_blue"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/light_blue"
        app:compactCalendarMultiEventIndicatorColor="@color/white"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextColor="#fff"
        app:compactCalendarTextSize="15dp" />
    <!--app:compactCalendarCurrentDayBackgroundColor="@color/main_red"-->
    <!--  TODO place workout history recyclerview   -->
    <LinearLayout
        android:id="@+id/workout_display"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_margin="5dp"
        android:background="@color/grey"
        android:gravity="center"
        android:layout_below="@+id/calendarView"
        android:visibility="invisible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            tools:listitem="@layout/row_calender" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bottom_navigation" />
</RelativeLayout>

